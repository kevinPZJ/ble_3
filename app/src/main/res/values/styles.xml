<resources>

    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/txt_green_color</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--溢出菜单样式 -->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">

    </style>


    <style name="line_view_style_landscape">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#f2f2f2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- toolbar弹出菜单样式 -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@color/bus_tab_bg_color</item>
        <item name="tabSelectedTextColor">@color/bus_tab_select_color</item>
    </style>

    <style name="AppSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="track">@drawable/abc_switch_track_mtrl_alpha</item>
        <item name="android:thumb">@drawable/abc_switch_thumb_material</item>
        <item name="colorControlActivated">@color/txt_green_color</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingRight">2dp</item>
    </style>
    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item><!--表示页面时候变暗，我们设置false，不变暗-->
        <item name="android:windowBackground">@android:color/transparent</item><!--表示背景颜色-->
    </style>

    <style name="AdInfoDialog" parent="Theme.AppCompat.Dialog" >
        <item name="android:backgroundDimEnabled">false</item><!--表示页面时候变暗，我们设置false，不变暗-->
        <item name="android:windowBackground">@android:color/transparent</item><!--表示背景颜色-->
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_600</item>
        <item name="colorControlActivated">@color/background_green</item>
    </style>
    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/background_green</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/title_color</item>
        <!-- Used for the background -->
        <item name="android:background">@color/background_white</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TranslucentNavigation" parent="AppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

</resources>
